extends ../../layouts/default.pug
include ../../mixins/alert.pug




block main

  +alert-error(5000)

  h1(class="mb-4") Thêm mới danh mục sản phẩm

  
  form(
    action=`${prefixAdmin}/categories/create`
    method="POST"
    enctype="multipart/form-data"
  )
    div(class="form-group")
      label(for="title") Tiêu đề
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        
      )
    
    div(class="form-group")
      label(for="parent_id") Danh mục cha
      input(
        type="text"
        class="form-control"
        id="parent_id"
        name="parent_id"
      )
    
    div(class="form-group")
      label(for="desc") Mô tả
      textarea(
        class="form-control"
        id="desc"
        name="desciption"
        rows="5"
        textarea-mce
      )

    div(
      class="form-group"
      upload-image
    )
      lable(for="thumbnail") Ảnh 
      input(
        type="file"
        class="form-control-file"
        id="thumbnail"
        name="thumbnail"
        accept="image/*"
        upload-image-input 
      )
      img(
        src=""
        class="image-preview"
        upload-image-preview
      )

    div(class="form-group")
      lable(for="position") Vị trí
      input(
        type="number"
        class="form-control"
        id="position"
        name="position"
        placeholder="Tự động tăng"
        min="1"
      )

    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked
      )
      lable(for="statusActive" class="form-check-lable") Hoạt động

    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusInactive"
        name="status"
        value="inactive"
        checked
      )
      lable(for="statusInactive" class="form-check-lable") Dừng hoạt động
    
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Tạo mới

