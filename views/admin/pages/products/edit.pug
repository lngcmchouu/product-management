extends ../../layouts/default.pug
include ../../mixins/alert.pug


block main 
  +alert-success(5000)
  +alert-error(5000)

  h1.mb-4 Chỉnh sửa sản phẩm 

  form(
    action=`${prefixAdmin}/products/edit/${item.id}?_method=PATCH`
    id="form-edit-product"
    method ="POST"
    enctype="multipart/form-data")
    div(class="form-group")
      lable(for="title") Tiêu đề
      input(
        type="text"
        class="form-control"
        id = "title"
        name="title"
        value = item.title
        )
    div(class="form-group")
      lable(for="title") Mô tả
      textarea(
        name="description"
        class="form-control"
        id="desc"
        rows="5"
      ) #{item.description}
    div(class="form-group")
      lable(for="price") Giá
      input(
        type="number"
        class="form-control"
        id = "price"
        name="price"
        value= item.price
        min="0"
        step="0.01"
      
      )
    div(class="form-group")
      lable(for="discount") % Giảm giá
      input(
        type="number"
        class="form-control"
        id="discount"
        name="discountPercentage"
        value= item.discountPercentage
        min="0"
        step="0.01"
      )
    div(class="form-group")
      lable(for="stock") Số lượng
      input(
        type = "number"
        class="form-control"
        id="stock"
        name="stock"
        value= item.stock
        min="0"
      )
    div(
      class="form-group"
      upload-img)
      
      //- accept ="image/*" : chỉ được upload mỗi ảnh
      lable(for="thumbnail") Ảnh
      input(
        type = "file"
        class="form-control-file"
        id="thumbnail"
        name="thumbnail"
        accept ="image/*" 
        upload-img-inp
      )
      div.position-relative
        img(
        src= item.thumbnail
        upload-img-pre
        class="img-pre"
        )
        button(
        type="button"
        class="btn-close d-none") x
  

      
    div(class="form-group")
      lable(for="position") Vị trí 
      input(
        type = "number"
        class="form-control"
        id="position"
        name="position"
        placeholder="Tự động tăng"
        min ="1"
        value = item.position
      )

    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        name="availabilityStatus"
        value="In Stock"
        id="activeItem"
        checked=(item.availabilityStatus == "In Stock" ? true : false)
      )
      label(for="acctiveItem" class="form-check-lable")   Hoạt động
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        name="availabilityStatus"
        value="Out Stock"
        id="inactiveItem"
        checked =(item.availabilityStatus == "Out Stock" ? true : false)
      )
      label(for="acctiveItem" class="form-check-lable") Dừng hoạt động
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật



    

    
  
    










    script(src="/admin/js/product.js") 
  