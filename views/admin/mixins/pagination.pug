mixin pagination(pagination)
  nav 
    ul.pagination

      li.page-item 
      button(class="page-link" btn-pagination = 1) Trang đầu
      
      if(pagination.currentPage > 1)
        li.page-item 
        button(class="page-link" btn-pagination = pagination.currentPage - 1) Trang trước

      - for(var i = 1; i <= pagination.totalPage; i++)
        
        li(
          class=`page-item 
          ${pagination.currentPage == i ? "active" : ""}`
          )
          button(
            class="page-link" btn-pagination = i
          ) #{i}
          
      if(pagination.currentPage < pagination.totalPage)
        li.page-item
        button(class="page-link" btn-pagination = pagination.currentPage + 1) Kế tiếp 

      li.page-item 
      button(class="page-link" btn-pagination = pagination.totalPage) Trang cuối